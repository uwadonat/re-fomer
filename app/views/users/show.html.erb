<h1> list of users </h1>

  <table class="table table-dark table-striped text-left"> 
  
   <thead>
     <tr>
 
       <th>Username</th>
       <th>Email</th>
       <th>Password</th>
       <th>Edit user</th>
       <th>Delete User</th>
     </tr>
   </thead>

   <tbody>

   <% @user.each do |user| %>
   
       <tr>
      
       <td><%= user.username %></td>
       <td><%= user.email %></td>
       <td><%= user.password %></td>
       <td><%= link_to "Edit", edit_user_path(user.id) %></td>
       <td><%= link_to "delete", user_path(user.id),
   method: :delete,
   data: { confirm: "Are you sure?" } %></td>
     </tr>
     <% end %>
         
   </tbody>
 
  </table>
  






