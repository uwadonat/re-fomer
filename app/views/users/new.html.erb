<div class="form-group my-3">
    <%= form_with model: @user  do |f|%>
      <%= f.text_field :username, autofocus: true, placeholder: 'Your user name here'%> <br/>
      <br/>
      <%= f.email_field :email, placeholder: 'example@example.com'%> <br/>
      <br/>
      <%= f.password_field :password, placeholder: 'Password'%><br/>
      <br/>
      <div><%= f.submit "create user" %></div>
    <% end %>
  </div>

  <% if @user.errors.any? %>
<div >
<% @user.errors.full_messages.each do |msg| %>
<h6><%= msg %></h6>
<% end %>
</div>
<% end %>
